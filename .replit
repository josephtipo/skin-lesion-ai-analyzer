run = "pip install -r requirements.txt && python app.py"
language = "python3"

[packager]
ignore = ["venv", ".venv", "__pycache__", ".pytest_cache"]

[packager.features]
enabledForHosting = false
packageSearch = true
guessImports = true

[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"

[interpreter]
command = ["python3", "-u", "app.py"]

[env]
PYTHONPATH = "${REPLIT_HOME}/${REPLIT_SLUG}:${PYTHONPATH}"
MPLCONFIGDIR = "${REPLIT_HOME}/${REPLIT_SLUG}/.config/matplotlib"
REPLIT_NIX_CHANNEL = "stable-21_11"

[nix]
channel = "stable-21_11"

[deployment]
run = ["sh", "-c", "python app.py"]